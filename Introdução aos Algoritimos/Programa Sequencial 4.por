		// Cálculos
		
		
		R = (A+B)^2
		S = (B+C)^2
		D = (R + S)/2

		// Resultado							

		escreva("\n O resultado da equação D = (R + S)/2 é igual a:" + D)
	
		
		









		
	}
}
