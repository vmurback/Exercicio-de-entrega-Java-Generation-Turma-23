programa
{
	
	


	
	funcao inicio()
	{


	inteiro A, B, C, D, R, S
	
		//Input


			escreva(" Informe os próximos três valores para obter o resultado:\n")
				escreva("\n Informe A: ")
					leia(A)
						escreva("\n Informe B: ")
